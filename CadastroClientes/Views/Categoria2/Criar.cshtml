@model CategoriaModelcs

<div class="text-center">
    <h1 class="display-4">Nova Categoria</h1>
</div>

<form asp-controller="Categoria2" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="name">Descrição</label>
        <input type="text" asp-for="Descricao" class="form-control" placeholder="Digite a descrição da categoria">
        @Html.ValidationMessageFor(c => c.Descricao)
    </div>
    <div class="form-group">
        <label for="Token">Token</label>
        <input type="text" asp-for="Token" class="form-control" placeholder="Digite a descrição da categoria">
        @Html.ValidationMessageFor(c => c.Token)
    </div>

    <button type="submit" class="btn btn-primary">Criar</button>
    <a class="btn btn-secondary" asp-controller="Categoria2" asp-action="Index" role="button">Voltar</a>
</form>