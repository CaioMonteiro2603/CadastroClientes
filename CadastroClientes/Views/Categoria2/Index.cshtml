@model List<CategoriaModelcs>

@{
    ViewData["Title"] = "Categorias";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Categoria2" asp-action="Criar">Criar nova categoria</a>
    </div>
    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" arial-label="Close">x</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btnsmall close-alert" data-bs-dismiss="alert" arial-label="Close">x</button>
            @TempData["MensagemErro"]
        </div>
    }

    <h2 class="display-4">Lista de categorias</h2>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Descrição</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                foreach (CategoriaModelcs categoria in Model)
                {
                    <tr>
                        <th scope="row">@categoria.CategoriaId</th>
                        <td>@categoria.Descricao</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@categoria.CategoriaId" asp-controller="Categoria2" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-primary btn-danger" asp-route-id="@categoria.CategoriaId" asp-controller="Categoria2" asp-action="Deletar">Deletar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

